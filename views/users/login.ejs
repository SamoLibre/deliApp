<% layout('layouts/boilerplate')%>
<div style="display: flex; flex-direction: column; justify-content: flex-start; align-items: center; height: 100vh; text-align: center; padding-top: 20px;">
    <h1>Login</h1>
    <p>Welcome back! Please enter your credentials to log in.</p>
    <form action="/login" class="validated-form" novalidate method="POST" style="display: flex; flex-direction: column; align-items: center;">
        <div class="mb-3" style="max-width: 300px; width: 100%;">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3" style="max-width: 300px; width: 100%;">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success" type="submit">Login</button>
    </form>
</div>
