<% layout('layouts/boilerplate') %>
<h1 style="color:white">Bura panel girişi!</h1>
<div class="admin-grid">
    <div class="square1">
        <form action="/adminpanel" method="POST">
            <% users.forEach(user => { %>
                <div style="color:white">
                    <label for="role-<%= user._id %>"><%= user.username %> (<%= user.email %>)</label>
                    <select id="role-<%= user._id %>" name="roles[<%= user._id %>]">
                        <% allowedRoles.forEach(role => { %>
                            <option value="<%= role %>" <%= user.role === role ? 'selected' : '' %>><%= role.charAt(0).toUpperCase() + role.slice(1) %></option>
                        <% }) %>
                    </select>
                    <!-- Delete button form -->
                    <form action="/adminpanel/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');" style="margin-left:10px;color:white;background:red;border:none;padding:4px 10px;border-radius:4px;">Delete</button>
                    </form>
                </div>
            <% }) %>
            <button type="submit">Update Roles</button>
        </form>
    </div>
    <div class="square2">
        <a href="/adminpanel/newUser" class="btn btn-primary">Create New User</a>
    </div>
    <!-- News quick post form -->
    <div class="square3">
        <form action="/news" method="POST" style="max-width:400px;">
            <div class="mb-3">
                <label for="newsTitle" class="form-label" style="color:white;">Haber Başlığı</label>
                <input type="text" class="form-control" id="newsTitle" name="title" required>
            </div>
            <div class="mb-3">
                <label for="newsContent" class="form-label" style="color:white;">Haber İçeriği</label>
                <textarea class="form-control" id="newsContent" name="content" rows="2" required></textarea>
            </div>
            <button type="submit" class="btn btn-success">Haber Ekle</button>
        </form>
    </div>
    <div class="square4"></div>
</div>
<div class="canvas"></div>
<link rel="stylesheet" href="./css/dots.css">
<script src="./javascripts/dots.js"></script>